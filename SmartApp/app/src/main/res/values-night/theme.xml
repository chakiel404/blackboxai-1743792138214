<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.SmartApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/system_black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/system_black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/background_dark</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/system_black</item>
        
        <!-- Card and surface colors -->
        <item name="colorSurface">@color/primary_dark</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Override styles for dark theme -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.SmartApp.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.SmartApp.Headline2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SmartApp.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.SmartApp.Body2.Dark</item>
    </style>

    <!-- Dark theme text styles -->
    <style name="TextAppearance.SmartApp.Headline1.Dark" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.SmartApp.Headline2.Dark" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.SmartApp.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.SmartApp.Body2.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/background_dark</item>
    </style>

    <!-- Dark theme card style -->
    <style name="Widget.SmartApp.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primary_dark</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Dark theme input field style -->
    <style name="Widget.SmartApp.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="hintTextColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/background_dark</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Dark theme bottom navigation style -->
    <style name="Widget.SmartApp.BottomNavigation.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/primary_light</item>
        <item name="itemTextColor">@color/primary_light</item>
        <item name="elevation">8dp</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <!-- Dark theme dialog style -->
    <style name="ThemeOverlay.SmartApp.MaterialAlertDialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/background_dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.SmartApp.Button.Dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.SmartApp.Button.OutlinedButton.Dark</item>
    </style>

    <!-- Dark theme button styles -->
    <style name="Widget.SmartApp.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/system_black</item>
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.SmartApp.Button.OutlinedButton.Dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_light</item>
        <item name="strokeColor">@color/primary_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
</resources>